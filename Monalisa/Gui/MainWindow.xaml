<Window x:Class="org.monalisa.gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="600">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="120"/>
    		<ColumnDefinition/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label      Grid.Row="0" Grid.ColumnSpan="3" Content="Population Size" />
            <TextBox x:Name="TextBox_PopulationSize"    Grid.Row="1" Grid.ColumnSpan="3" Height="20" VerticalAlignment="Top" PreviewTextInput="TextBox_OnlyNumeric" />
            <Label      Grid.Row="2" Grid.ColumnSpan="3" Content="Canvas Size" />
            <TextBox x:Name="TextBox_CanvasSizeX"    Grid.Row="3" Grid.Column="0" Height="20" VerticalAlignment="Top" PreviewTextInput="TextBox_OnlyNumeric" />
            <Label      Grid.Row="3" Grid.Column="1" Height="20" Content="X" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10" Padding="0,5,0,0"/>
            <TextBox x:Name="TextBox_CanvasSizeY"    Grid.Row="3" Grid.Column="2" Height="20" VerticalAlignment="Top" PreviewTextInput="TextBox_OnlyNumeric" />
            <Label      Grid.Row="4" Grid.ColumnSpan="3" Content="Number of Polygons" />
            <TextBox x:Name="TextBox_PolygonCount"    Grid.Row="5" Grid.ColumnSpan="3" Height="20" VerticalAlignment="Top" PreviewTextInput="TextBox_OnlyNumeric" />
            <Label      Grid.Row="6" Grid.ColumnSpan="3" Content="Type of Polygons" />
            <ComboBox x:Name="ComboBox_PolygonType"   Grid.Row="7" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120">
                <TextBlock Text="Triangles" />
                <TextBlock Text="Quads" />
            </ComboBox>
            <Label      Grid.Row="8" Grid.ColumnSpan="3" Content="Original Image" />
            <Button     Grid.Row="9" Grid.ColumnSpan="3" Content="Browse..." Height="20" VerticalAlignment="Top" Click="Button_Click"/>
            <Button x:Name="Button_Run"     Grid.Row="10" Grid.ColumnSpan="3" Content="Run" Click="Run_Click" />
        </Grid>
        <Canvas x:Name="MainCanvas" Grid.Column="1"/>
        <Image x:Name="SeedImage" Grid.Column="2" />
        <Label x:Name="Label_Status" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
